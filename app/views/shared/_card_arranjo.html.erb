<div class="col-xs-12 col-sm-4">
  <div class="card-arranjo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path arranjo.photo, height: 300, width: 400, crop: :fill %>');">
    <div class="card-category"><%= arranjo.department %></div>
    <div class="card-description">
      <h2><%= arranjo.name  %></h2>
      <p><% "#{arranjo.description.truncate(15)}" %></p>
    </div>
    <a class="card-link" href="<%= arranjo_path(arranjo)  %>" ></a>
  </div>
</div>
